{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier", "no-loops"],
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "warn",
    "no-loops/no-loops": "warn",
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["server.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
